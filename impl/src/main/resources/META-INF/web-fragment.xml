<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd" version="3.0">
 
   <servlet>
      <servlet-name>XWidgets Servlet</servlet-name>
      <servlet-class>org.jboss.seam.xwidgets.service.XWidgetsServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>

   <servlet-mapping>
      <servlet-name>XWidgets Servlet</servlet-name>
      <url-pattern>/xwidgets/*</url-pattern>
   </servlet-mapping>
   
   <servlet>
      <servlet-name>OpenID AJAX Servlet</servlet-name>
      <servlet-class>org.jboss.seam.xwidgets.service.OpenIdServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>

   <servlet-mapping>
      <servlet-name>OpenID AJAX Servlet</servlet-name>
      <url-pattern>/ajaxopenid/*</url-pattern>
   </servlet-mapping>   
</web-fragment>
